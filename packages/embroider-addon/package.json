{
	"name": "@twyr/embroider-addon",
	"displayName": "Embroider Addon",
	"description": "Basic Ember 4.0+ Addon using the Embroider build system",
	"homepage": "https://github.com/twyr/embroider-template/tree/main/packages/embroider-addon",
	"license": "MITNFA",
	"readme": "README.md",
	"version": "1.0.2",
	"keywords": [
		"ember-addon",
		"embroider"
	],
	"author": {
		"name": "Vish Desai",
		"email": "shadyvd@hotmail.com",
		"url": "https://github.com/shadyvd"
	},
	"contributors": [
		{
			"name": "Vish Desai",
			"email": "shadyvd@hotmail.com",
			"url": "https://github.com/shadyvd"
		}
	],
	"maintainers": [
		{
			"name": "Vish Desai",
			"email": "shadyvd@hotmail.com",
			"url": "https://github.com/shadyvd"
		}
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twyr/embroider-template.git"
	},
	"bugs": {
		"url": "https://github.com/twyr/embroider-template/issues"
	},
	"main": "addon-main.js",
	"exports": {
		"./*": "./dist/*",
		"./addon-main.js": "./addon-main.js"
	},
	"files": [
		"dist",
		"addon-main.js",
		"./../../README.md"
	],
	"dependencies": {
		"@embroider/addon-shim": "1.7.1",
		"@embroider/macros": "1.7.1",
		"@embroider/util": "1.7.1",
		"@glimmer/component": "1.1.2",
		"@glimmer/tracking": "1.1.2",
		"ember-cli-htmlbars": "6.0.1",
		"ember-debug-logger": "2.1.1",
		"ember-modifier": "3.2.7"
	},
	"devDependencies": {
		"@babel/core": "7.18.2",
		"@babel/eslint-parser": "7.18.2",
		"@babel/plugin-proposal-class-properties": "7.17.12",
		"@babel/plugin-proposal-decorators": "7.18.2",
		"@babel/plugin-proposal-private-methods": "7.17.12",
		"@embroider/addon-dev": "1.7.1",
		"@rollup/plugin-babel": "5.3.1",
		"ember-cli": "4.4.0",
		"ember-template-lint": "4.10.0",
		"ember-template-lint-plugin-prettier": "4.0.0",
		"eslint": "8.16.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-ember": "10.6.1",
		"eslint-plugin-json": "3.1.0",
		"eslint-plugin-prettier": "4.0.0",
		"prettier": "2.6.2",
		"rollup": "2.75.5"
	},
	"scripts": {
		"build": "npx rollup --config",
		"build:clean": "mkdir -p ./dist && rm -rf ./dist && npm run build && npm run lint:fix",
		"check-updates": "npx npm-check-updates -i -u",
		"lint": "npm run lint:hbs && npm run lint:js && npm run lint:misc",
		"lint:fix": "npm run lint:hbs:fix && npm run lint:js:fix && npm run lint:misc:fix",
		"lint:hbs": "npx ember-template-lint './**/*.hbs'",
		"lint:hbs:fix": "npx ember-template-lint './**/*.hbs' --fix",
		"lint:js": "npx prettier './**/*.{js,json}' --no-error-on-unmatched-pattern --list-different && npx eslint './**/*.{js,json}' --no-error-on-unmatched-pattern --cache",
		"lint:js:fix": "npx prettier './**/*.{js,json}' --no-error-on-unmatched-pattern --write && npx eslint './**/*.{js,json}' --no-error-on-unmatched-pattern --cache --fix",
		"lint:misc": "npx prettier './**/*.{html,yml}' --no-error-on-unmatched-pattern --list-different",
		"lint:misc:fix": "npx prettier './**/*.{html,yml}' --no-error-on-unmatched-pattern --write",
		"lint-staged": "npx lint-staged --allow-empty",
		"prepare": "npm run build:clean",
		"start": "npx rollup --config --watch",
		"start:clean": "mkdir -p ./dist && rm -rf ./dist && npm run lint:fix && npm run start",
		"test": "echo 'This addon does not have tests, run them in test-app'"
	},
	"engines": {
		"node": ">= 14"
	},
	"ember": {
		"edition": "octane"
	},
	"ember-addon": {
		"version": 2,
		"type": "addon",
		"main": "addon-main.js",
		"build": "addon-main.js",
		"app-js": {
			"./components/very-simple-one/index.js": "./dist/_app_/components/very-simple-one/index.js",
			"./components/very-simple-two/index.js": "./dist/_app_/components/very-simple-two/index.js"
		}
	}
}
